---
import { ViewTransitions } from 'astro:transitions';

import blurredMercifulAndMighty from '../images/blurred-merciful-and-mighty.jpeg';

interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="2xl:text-[20px]">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <ViewTransitions />
		<title>{(title ? `${title} | ` : "") + "Candlestand Music"}</title>
	</head>
	<body class="font-serif overflow-x-hidden bg-gray-300 bg-cover bg-fixed" style={{backgroundImage: `url(${blurredMercifulAndMighty.src})`}}>
    <nav class="fixed top-0 z-10 h-16 2xl:h-20 w-full backdrop-blur-xl flex flex-wrap px-4 content-center justify-center text-white">
      <h2 class="text-2xl"><a href="/">Candlestand Music</a></h2>
      <ul class="flex items-center mx-auto sm:mr-0">
        <li class="px-4"><a href="/about">About</a></li>
        <li class="px-4"><a href="/contact">Contact</a></li>
      </ul>
    </nav>
		<slot />
	</body>
</html>

<style is:global>
	html, body {
    margin: 0;
    padding: 0;
    width: 100vw;
    height: 100vh;
  }
  nav {
    background-color: rgba(20, 20, 20, 0.7);
  }
</style>
