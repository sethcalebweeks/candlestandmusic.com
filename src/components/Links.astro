---
import { Icon } from 'astro-icon';

interface Props {
  spotify?: string;
  applemusic?: string;
  youtube?: string;
  amazon?: string;
  download?: string;
}

function objectEntries<
  T extends Record<PropertyKey, unknown>,
  K extends keyof T,
  V extends T[K]
>(o: T) {
  return Object.entries(o) as [K, V][];
}

const links = {
  spotify: 'simple-icons:spotify',
  applemusic: 'simple-icons:applemusic',
  youtube: 'simple-icons:youtube',
  amazon: 'simple-icons:amazon',
//  download: 'ri:arrow-down-circle-fill'
} as const;
---

<ul class="flex flex-row justify-center my-2 sm:my-4">
  {objectEntries(links).map(([provider, icon]) => (
    <li>
      <a href={Astro.props[provider]}>
        <Icon name={icon} class="h-8 m-2 opacity-60 hover:opacity-100 transition-all" />
      </a>
    </li>
  ))}
</ul>
