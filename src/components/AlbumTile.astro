---
import spotify from '../images/spotify.svg';
import appleMusic from '../images/apple-music.svg';
import youTube from '../images/youtube.svg';
import amazon from '../images/amazon.svg';

const links = [
  {image: spotify, alt: 'spotify'},
  {image: appleMusic, alt: 'apple music'},
  {image: youTube, alt: 'youtube'},
  {image: amazon, alt: 'amazon'},
]

---

<div>
  <slot />
  <ul class="flex flex-row justify-center">
    {links.map(({image, alt}) => (
      <li>
        <a href="#">
          <img src={image.src} alt={alt} class="h-8 m-2 opacity-60 hover:opacity-100 transition-all" />
        </a>
      </li>
    ))}
  </ul>
</div>